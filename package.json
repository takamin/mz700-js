{
  "name": "mz700-js",
  "version": "1.2.19",
  "description": "MZ-700 Full JavaScript Emulator",
  "private": false,
  "scripts": {
    "start": "http-server .. -p 3000 -o mz700-js/emu.html",
    "test": "grunt lint && mocha && cd test && sh ./test.sh && cd ..",
    "postinstall": "grunt release",
    "lint": "grunt lint",
    "build": "grunt debug",
    "release": "grunt release",
    "generate-docs": "jsdoc --configure jsdoc.json --verbose"
  },
  "bin": {
    "mz700-js": "./bin/mz700-web.js",
    "mz700-cli": "./bin/mz700-cli.js",
    "mzasm": "./bin/mzasm.js",
    "mzdas": "./bin/mzdasm.js",
    "bin2mzt": "./bin/bin2mzt.js"
  },
  "dependencies": {
    "@types/node": "^13.1.6",
    "ansi-escape-sequences": "^5.1.2",
    "b-box": "^1.0.1",
    "codemirror": "^5.50.2",
    "debug": "^4.1.1",
    "dock-n-liquid": "^0.5.3",
    "fractional-timer": "^1.0.2",
    "fullscrn": "^1.3.3",
    "grunt": "^1.0.4",
    "grunt-browserify": "^5.3.0",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify-es": "^3.3.0",
    "grunt-eslint": "^22.0.0",
    "grunt-ts": "^6.0.0-beta.22",
    "hash-arg": "0.3.5",
    "http-server": "^0.12.1",
    "js-cookie": "^2.2.1",
    "linebyline": "^1.3.0",
    "list-it": "^1.0.5",
    "load-grunt-tasks": "^5.1.0",
    "node-getopt": "^0.3.2",
    "path": "^0.12.7",
    "transworker": "^1.3.1",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "jsdoc": "^3.6.3",
    "minami": "^1.2.3",
    "mocha": "^7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/takamin/mz700-js.git"
  },
  "keywords": [
    "emulator",
    "MZ-700",
    "MZ700",
    "Z80"
  ],
  "author": "Koji Takami",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/takamin/mz700-js/issues"
  },
  "homepage": "https://takamin.github.io/mz700-js/emu.html",
  "engines": {
    "node": ">=7.6"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "mocha": true
    },
    "globals": {
      "$": true,
      "ArrayBuffer": true
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn",
      "valid-jsdoc": "warn"
    },
    "extends": "eslint:recommended"
  }
}
