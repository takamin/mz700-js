{
  "name": "mz700-js",
  "version": "1.0.0",
  "description": "MZ-700 Full JavaScript Emulator",
  "private": false,
  "scripts": {
    "start": "http-server .. -p 3000 -o http:127.0.0.1:3000/mz700-js/emu.html",
    "test": "grunt lint && mocha && cd test && sh ./test.sh && cd ..",
    "postinstall": "grunt release",
    "grunt": "grunt",
    "generate-docs": "jsdoc --configure jsdoc.json --verbose"
  },
  "bin": {
    "mz700-js": "./bin/mz700-web.js",
    "mz700-cli": "./bin/mz700-cli.js",
    "mzasm": "./bin/mzasm.js",
    "mzdas": "./bin/mzdasm.js",
    "bin2mzt": "./bin/bin2mzt.js"
  },
  "dependencies": {
    "ansi-escape-sequences": "^4.0.0",
    "b-box": "^0.1.2",
    "codemirror": "^5.37.0",
    "dock-n-liquid": "^0.5.3",
    "fractional-timer": "^1.0.2",
    "fullscrn": "^1.3.1",
    "grunt": "^1.0.2",
    "grunt-browserify": "^5.3.0",
    "grunt-cli": "^1.2.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify-es": "^3.3.0",
    "grunt-eslint": "^20.1.0",
    "hash-arg": "0.3.3",
    "http-server": "^0.11.1",
    "jquery": "^3.3.1",
    "jquery-ui": "^1.12.1",
    "linebyline": "^1.3.0",
    "list-it": "^0.4.1",
    "load-grunt-tasks": "^4.0.0",
    "node-getopt": "^0.3.2",
    "transworker": "^1.0.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "jsdoc": "^3.5.5",
    "minami": "^1.2.3",
    "mocha": "^5.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/takamin/mz700-js.git"
  },
  "keywords": [
    "emulator",
    "MZ-700",
    "MZ700",
    "Z80"
  ],
  "author": "Koji Takami",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/takamin/mz700-js/issues"
  },
  "homepage": "https://takamin.github.io/mz700-js/MZ-700/client",
  "engines": {
    "node": ">=7.6"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "mocha": true
    },
    "globals": {
      "ArrayBuffer": true
    },
    "rules": {
      "no-console": "off",
      "valid-jsdoc": "warn"
    },
    "extends": "eslint:recommended"
  }
}
